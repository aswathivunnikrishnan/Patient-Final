
   
@model IEnumerable<PatientManagementsystem.Models.Hospital>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateHospital")
</p>
<script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>


<table id="table_id" class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Hospital Name</th>
            <th scope="col">State Name</th>
            <th scope="col">District</th>
            <th scope="col">City</th>
            <th scope="col">Office Phone Number</th>
            <th scope="col">Action</th>

        </tr>
    </thead>

</table>
<script>
    $(document).ready(function () {
     
        $('#table_id').DataTable(
            {
                "ajax": {
                    url: "/Hospital/GetAllHospital",
                    type: "Get",
                    dataType: "json",
                },

                "columns": [

                    { 'data': 'Hospital_Id' },
                    { 'data': 'Hospital_Name' },
                    { 'data': 'StateName' },
                    { 'data': 'District' },
                    { 'data': 'City' },
                    { 'data': 'Office_PhoneNumber' },
                    {
                        'data': 'Hospital_Id', 'render': function (data) {
                            return '<a class="orenge" title="edit" onclick="editHospital(' + data + ')" > <span class="glyphicon glyphicon-edit"></span></a>  <a class="red" title="delete"  onclick="Delete(' + data + ')"> <span class="glyphicon glyphicon-trash"></span></a> <a class="green" title="gotoDashboard" onclick="getHospitalPage(' + data + ')" > <span class="glyphicon glyphicon-chevron-right"></span></a>';
                        }
                    }

                ],
                /*"serverSide": true,*/
                /* "order": [1, "asc"],*/
                "scrollY": "370px",
                "scrollCollapse": false

            });


    });


    function editHospital(id) {
       /* $.post("/Patient/Edit/" + id);*/
        window.location.href = "@Url.Action("Edit", "Hospital")" +"/"+ id;
    }

    function Delete(id) {
       window.location.href = "@Url.Action("Delete", "Hospital")" +"/"+ id;
    }

    function getHospitalPage(id){
        window.location.href = "@Url.Action("DashBoard", "Admin")" + "/" + id;
    }




</script>
<style>

    .orenge {
        color: orange;
        font-size: x-large;
        cursor: pointer;
    }

    .red {
        color: red;
        font-size: x-large;
        cursor: pointer;
    }
    .green {
        color: green;
        font-size: x-large;
        cursor: pointer;
    }
</style>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
